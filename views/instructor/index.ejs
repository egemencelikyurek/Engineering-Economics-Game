<%- include("../partials/header") %>

<div class="container text-left" style="width: 35%;margin-right: auto;margin-left: auto;">
    
    <h1>Create a new class</h1>
    <form action="/createClass" method="POST" >
        <div class="form-group">
            <label>Class Name</label>
            <input class="form-control" type="text" name="name" placeholder="Ex. 2020-2021 Spring" required>
        </div>
        <label>Initial interest rate of game (%)</label>
        <div class="input-group mb-3" style="width: 100%;">
            <div class="input-group-prepend" >
              <span class="input-group-text" id="basic-addon1">%</span>
            </div>
                <input type="number" class="form-control" name="interest" min="0" max="100" step="0.1" aria-describedby="basic-addon1" required>
        </div>
        <label>Initial interest rate for loans (%)</label>
        <div class="input-group mb-3" style="width: 100%;">
            
            <div class="input-group-prepend" >
              <span class="input-group-text" id="basic-addon2">%</span>
            </div>
                <input type="number" class="form-control removearrow" name="intForLoan" min="0" max="100" step="0.1" aria-describedby="basic-addon2" required>
        </div>     
        <div class="form-group">
            <label>Max number of week</label>
            <input class="form-control" style="width:100%;" type="number" name="maxWeek" id="maxWeek" min="4" max="14" step="1" required>
        </div>
        <div class="form-group">
            <label>Week number for Cost-only questions</label>
            <input class="form-control" style="width:100%;" type="number" name="coStart" id="maxWeek" min="1" step="1" required>
        </div>
        <div class="form-group">
            <label>Week number for Replacement Analysis questions</label>
            <input class="form-control" style="width:100%;" type="number" name="raStart" id="maxWeek" min="1" step="1" required>
        </div>
        <div class="form-group">
            <label>Starting date and time of game</label>
            <input class="form-control float-left" type="date" style="width: 58%;margin-right: 20px;" name="date" name="date" required >
            <input class="form-control" type="time" name="time" id="time" required style="width: 38%;" />
        </div>

        <div class="form-group" id="create">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>
    </form>
</div>


<%- include("../partials/footer") %>