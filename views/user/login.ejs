<%- include("../partials/header") %>
    <div class="login-clean">
        <form method="POST" action="/login">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration" style="color: #0038a8;"><i class="icon ion-ios-unlocked-outline" style="font-size: 93px;"></i></div>
            <div class="form-group"><input class="form-control" type="text" name="username" placeholder="ITU-Mail" required></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password" required ></div>
            <div class="form-group"><button class="btn btn-block" type="submit" style="width: 93px;margin-right: auto;margin-left: auto;background-color: #0038a8;color: rgb(255,255,255);">Log In</button></div>
        </form>
    </div>
