<%- include("../partials/header") %>

    <div>
        <div class="container border rounded border-dark" style="background-color: #e7e6e6;padding-bottom: 15px;">
            <div class="row" style="margin-left: -15px;padding: 0px;">
                <div class="col-12 col-md-12" style="padding-right: 0px;padding-left: 0px;margin-bottom: 16px;">
                    <h3 class="display-4 border rounded-0 border-secondary shadow-sm" style="padding: 10px;font-size: 34px;letter-spacing: 2px;line-height: 34px;font-weight: 400;">Loan Calculator</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <form action="/loan" method="POST">
                        <p style="font-size: 19px;">Take loan out from bank by interest of % <strong><span id="interest"><%= (currentClass.intForLoan*100).toFixed(2) %></span></strong></p>
                        <hr />
                        <div class="form-group" style="margin-bottom: 27px;">
                            <label style="margin: 0px;">Loan Amount</label>
                            <input type="number" class="border rounded border-dark shadow-sm form-control float-right" required name="loan" id="loan" value="4000" min="0" step="100" style="width: 70%;background-color: #f4f1f1;"
                            /></div>
                        <div class="form-group"><label style="margin-bottom: 0px;">Number of Terms</label>
                            <input type="number" name="term" value="4" required id="term" min="1" max="<%= currentClass.maxWeek - currentClass.currentWeek -1 %>" class="border-dark form-control float-right" style="width: 50%;background-color: #f4f1f1;" />
                        </div>
                        <div class="row form-group text-center" style="margin-top: 0px;margin-bottom: 0px; padding: 10px;">
                            <button class="btn btn-success" style="margin-top: 12px; margin-right: 6px;">Take Loan Now</button>
                            <a href="#" id="calculate" class="btn btn-info" style="margin-top: 12px; ">Calculate</a>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-12 text-center">
                    <div class="row" style="height: 100%;">
                        <div class="col-2" style="height: 100%;"><i class="fa fa-angle-right d-sm-flex align-items-sm-center" style="height: 100%;line-height: 18px;width: 74px;font-size: 148px;letter-spacing: 0px;margin-top: 0;margin-bottom: auto;font-weight: 100;opacity: 0.38;filter: blur(0px) brightness(106%) contrast(0%) grayscale(0%) hue-rotate(0deg) invert(0%) saturate(92%);padding-left: 0px;margin-left: 25px;font-style: normal;"></i></div>
                        <div class="col-10 my-auto" style="margin-top: 22px;">
                            <div style="margin-top: -21px;">
                                <p class="d-sm-flex justify-content-sm-center" style="height: 100%;font-size: 19px;margin-bottom: 0px;">Weekly Payments</p>
                                <h1 class="display-4 d-sm-flex justify-content-sm-center" style="margin-bottom: 23px;">$<span id="payment"><%= (4000*currentClass.interestRate*Math.pow((1+currentClass.interestRate),4))/(Math.pow((1+currentClass.interestRate),4)-1)  %></span></h1>
                            </div><a class="text-info" href="#" id="details" style="margin-top: 0px;"><span id="detailText">Show</span> Payment Details</a></div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="container" id="tablo">
        <div class="table-responsive">
            <table class="table" id="myTable">
                <thead class="thead-light">
                    <tr>
                        <th>Term</th>
                        <th>Weekly Payment</th>
                        <th>Interest Payment</th>
                        <th>Principal</th>
                        <th>Remaining Principal</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
    <script src="javascripts/loanPage.js" type="text/javascript"></script>

<%- include("../partials/footer") %>