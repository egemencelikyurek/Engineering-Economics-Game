                <% if(user.costonlypool.length == 0){ %>
                    <h4 class="icerik">  There is no left invesment. Come back next week... </h4>
               <% } %>
                <% user.costonlypool.forEach(function(deal){ %>
                    <% if(deal.weeknumber == currentClass.currentWeek){ %>
